<div class="container mx-auto p-6">
  <h1 class="text-3xl font-bold mb-6">Properties</h1>

  <%= form_with url: properties_path, method: :get, local: true, class: "mb-6" do %>
    <div class="flex flex-col sm:flex-row gap-4 mb-6">
      <div class="flex-1 max-w-xs">
        <%= label_tag :city, "City", class: "block text-gray-700 mb-1 text-sm font-medium" %>
        <%= text_field_tag :city, params[:city], class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <div class="flex-1 max-w-xs">
        <%= label_tag :state, "State", class: "block text-gray-700 mb-1 text-sm font-medium" %>
        <%= text_field_tag :state, params[:state], class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <div class="flex items-end">
        <%= submit_tag "Search", class: "bg-blue-500 text-white px-4 py-2 rounded-lg shadow-sm hover:bg-blue-600 transition duration-300" %>
      </div>
    </div>
  <% end %>

  <table class="min-w-full bg-white border border-gray-200 rounded-lg overflow-hidden shadow-sm">
    <thead>
      <tr class="bg-gray-100">
        <th class="py-3 px-4 border-b text-left">Address</th>
        <th class="py-3 px-4 border-b text-left">City</th>
        <th class="py-3 px-4 border-b text-left">State</th>
        <th class="py-3 px-4 border-b" colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @properties.each do |property| %>
        <tr class="hover:bg-gray-50">
          <td class="py-3 px-4 border-b"><%= property.address %></td>
          <td class="py-3 px-4 border-b"><%= property.city %></td>
          <td class="py-3 px-4 border-b"><%= property.state %></td>
          <td class="py-3 px-4 border-b">
            <%= link_to 'Show', property, class: "text-blue-500 hover:underline" %>
          </td>
          <td class="py-3 px-4 border-b">
            <%= link_to 'Edit', edit_property_path(property), class: "text-yellow-500 hover:underline" %>
          </td>
          <td class="py-3 px-4 border-b">
            <%= link_to 'Remove', property, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-500 hover:underline" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-6">
    <%= link_to 'New Property', new_property_path, class: "bg-green-500 text-white px-4 py-2 rounded-lg shadow-sm hover:bg-green-600 transition duration-300" %>
  </div>
</div>
