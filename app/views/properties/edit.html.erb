<!-- Edit Property Form -->
<div class="container mx-auto p-6 max-w-lg">
  <h1 class="text-3xl font-bold text-gray-600 mb-6">
    Edit <%= @property.address %>
  </h1>

  <%= form_with model: @property, local: true, class: 'space-y-4' do |form| %>
    <div class="bg-white p-6 border border-gray-200 rounded-lg shadow-sm">
      <div class="mb-4">
        <%= form.label :address, class: 'block text-gray-700 mb-2' %>
        <%= form.text_field :address, class: 'w-full px-3 py-2 border border-gray-300 rounded' %>
      </div>

      <div class="mb-4">
        <%= form.label :city, class: 'block text-gray-700 mb-2' %>
        <%= form.text_field :city, class: 'w-full px-3 py-2 border border-gray-300 rounded' %>
      </div>

      <div class="mb-4">
        <%= form.label :state, class: 'block text-gray-700 mb-2' %>
        <%= form.text_field :state, class: 'w-full px-3 py-2 border border-gray-300 rounded' %>
      </div>

      <div class="flex justify-center">
        <%= form.submit 'Update Property', class: 'bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600' %>
      </div>
    </div>
  <% end %>

  <div class="mt-6 text-center">
    <%= link_to 'Back', property_path(@property), class: 'bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600' %>
  </div>
</div>
