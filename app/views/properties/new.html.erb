<!-- New Property Form -->
<div class="container mx-auto p-6 max-w-lg">
  <h1 class="text-3xl font-bold text-gray-600 mb-6">
    New Property
  </h1>

  <%= form_with model: @property, local: true, class: "bg-white p-8 border border-gray-200 rounded-lg shadow-md" do |form| %>
    <div class="mb-4">
      <%= form.label :address, class: "block text-gray-700 mb-2" %>
      <%= form.text_field :address, class: "w-full px-3 py-2 border border-gray-300 rounded" %>
    </div>

    <div class="mb-4">
      <%= form.label :city, class: "block text-gray-700 mb-2" %>
      <%= form.text_field :city, class: "w-full px-3 py-2 border border-gray-300 rounded" %>
    </div>

    <div class="mb-4">
      <%= form.label :state, class: "block text-gray-700 mb-2" %>
      <%= form.text_field :state, class: "w-full px-3 py-2 border border-gray-300 rounded" %>
    </div>

    <div class="mt-6 flex justify-center">
      <%= form.submit 'Create Property', class: "bg-green-500 text-white px-6 py-3 rounded hover:bg-green-600" %>
    </div>
  <% end %>

  <div class="mt-6 text-center">
    <%= link_to 'Back', properties_path, class: 'bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600' %>
  </div>
</div>
