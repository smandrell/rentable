<!-- Edit Unit Form -->
<div class="container mx-auto p-6 max-w-lg">
  <h1 class="text-3xl font-bold text-gray-600 mb-6">
    Edit Unit #<%= @unit.id %> for <%= @property.address %>
  </h1>

  <%= form_with(model: [@property, @unit], local: true, class: 'space-y-4') do |form| %>
    <div class="bg-white p-6 border border-gray-200 rounded-lg shadow-sm">
      <div class="mb-4">
        <%= form.label :bedroom_count, class: 'block text-gray-700 mb-2' %>
        <%= form.number_field :bedroom_count, value: @unit.bedroom_count, class: 'w-full px-3 py-2 border border-gray-300 rounded' %>
      </div>

      <div class="mb-4">
        <%= form.label :bathroom_count, class: 'block text-gray-700 mb-2' %>
        <%= form.number_field :bathroom_count, value: @unit.bathroom_count, class: 'w-full px-3 py-2 border border-gray-300 rounded' %>
      </div>

      <div class="mb-4">
        <%= form.label :square_footage, class: 'block text-gray-700 mb-2' %>
        <%= form.number_field :square_footage, value: @unit.square_footage, class: 'w-full px-3 py-2 border border-gray-300 rounded' %>
      </div>

      <div class="mb-4">
        <%= form.label :rent_price, class: 'block text-gray-700 mb-2' %>
        <%= form.number_field :rent_price, value: @unit.rent_price, class: 'w-full px-3 py-2 border border-gray-300 rounded' %>
      </div>

      <div class="flex justify-center">
        <%= form.submit 'Update Unit', class: 'bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600' %>
      </div>
    </div>
  <% end %>

  <div class="mt-6 text-center">
    <%= link_to 'Back', property_units_path(@property), class: 'bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600' %>
  </div>
</div>
